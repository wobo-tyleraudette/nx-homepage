{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nx-homepage/api": ["libs/api/src/index.ts"],
      "@nx-homepage/models": ["libs/models/src/index.ts"],
      "@nx-homepage/store": ["libs/store/src/index.ts"],
      "@nx-homepage/ui": ["libs/ui/src/index.ts"],
      "@nx-homepage/utilities": ["libs/utilities/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
