{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nx-homepage/homepage-api-api": ["libs/homepage-api/api/src/index.ts"],
      "@nx-homepage/homepage-api-data": ["libs/homepage-api/data/src/index.ts"],
      "@nx-homepage/homepage-app-store": [
        "libs/homepage-app/store/src/index.ts"
      ],
      "@nx-homepage/homepage-app-ui": ["libs/homepage-app/ui/src/index.ts"],
      "@nx-homepage/models": ["libs/models/src/index.ts"],
      "@nx-homepage/utilities-nonpub": ["libs/utilities-nonpub/src/index.ts"],
      "@nx-homepage/shared-ui": ["libs/shared/ui/src/index.ts"],
      "@nx-homepage/shared-utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
